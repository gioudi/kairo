@model ListViewModel<TConductor>

<div id="main">
    <div class="row" id="viewDrivers">
        <div class="content-wrapper-before custom-content-wrapper-before lighten-5"></div>
        <div class="breadcrumbs-dark custom-breadcrumbs-dark pb-0 pt-4" id="breadcrumbs-wrapper">
            <!-- Titulo de la ventana -->
            <div class="container">
                <div class="row">
                    <div class="col s10 m6 l6">
                        <h5 class="breadcrumbs-title  custom-breadcrumbs-title mt-0 mb-0"><span>Conductores</span></h5>
                        <ol class="breadcrumbs mb-0">
                            <li class="breadcrumb-item custom-breadcrumb-item">
                                <a href="index.html">Kairos</a>
                            </li>
                            <li class="breadcrumb-item custom-breadcrumb-item">
                                <a href="#">Suministro y Logística</a>
                            </li>
                            <li class="breadcrumb-item custom-breadcrumb-item active">
                                Lista Conductores
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
            <!-- Fin del titulo de la ventana -->
        </div>
        <div class="col s12">
            <div class="container">
                <!-- Botón para agregar un nuevo conductor -->
                <div class="contact-overlay"></div>
                <div style="bottom: 54px; right: 19px;" class="fixed-action-btn direction-top @(@Model.ActionsPermission.Crear ? "" : "disable-action")">
                    <a id="conductor-add" data-turbolinks="false" class="custom-btnic custom-btnic-gradient btn-large waves-effect primary-text gradient-shadow contact-sidebar-trigger" href="#">
                        <i class="material-icons">person_add</i>
                    </a>
                </div>
                <!-- Fin de popup nuevo conductor -->
                <!-- Inicio del área de contenido -->
                <div class="content-area custom-content-area">
                    <div class="app-wrapper">
                        <div class="datatable-search">
                            <i class="material-icons mr-2 search-icon">search</i>
                            <input type="text" placeholder="Buscar usuario" class="app-filter" id="global_filter">
                        </div>
                        @await Html.PartialAsync("_ListaConductores")
                    </div>
                </div>
                <!-- Fin del área de contenido -->
            </div>
        </div>
    </div>

    <div id="conductor-modal" style="height: 450px !important;" class="modal modal-fixed-footer">
    </div>
</div>


@section scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" type="text/css" href="~/css/pages/conductores.css">
    <script type="module" src="~/dist/js/pages/conductores.js" asp-append-version="true"></script>
}