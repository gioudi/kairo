@model IEnumerable<ProcesamientoArchivosViewModel>
<!-- Cards de mapeo -->
@foreach (var map in Model)
{
    <div class="col" id="@map.IdMapeo">
        <div class="card card-border z-depth-2 hoverable animate fadeLeft">
            <svg viewBox="-35 90 150 150" xmlns="http://www.w3.org/2000/svg">
                <path fill="#24A148" d="M23.3,-17C30.1,-10,35.5,-0.4,37.9,16.6C40.4,33.5,39.9,57.7,28.3,66.3C16.6,74.8,-6.3,67.7,-22.3,56.2C-38.3,44.7,-47.5,28.8,-44.3,17.4C-41.1,6,-25.5,-1,-16.1,-8.6C-6.7,-16.2,-3.3,-24.3,2.5,-26.3C8.2,-28.2,16.5,-24,23.3,-17Z" transform="translate(100 100)" />
            </svg>

            <div class="card-header">
                <div class="row justify-content-between flex-text">
                    <div class="col pr-0 s9">
                        <h6 class="card-title grey-text text-darken-4 truncate tooltipped" data-position="bottom" data-tooltip="@map.IdMapeo">@map.IdMapeo</h6>
                        <div class="display-flex left-align social-icon mt-10">
                            <a class="cursor-point waves-effect" data-turbolinks="false"><i class="material-icons files-action files-edit" data-mapperid="@map.IdMapeo">edit</i></a>
                            <div class="divider-h mr-4 ml-4"></div>
                            <a class="cursor-point waves-effect" data-turbolinks="false"><i class="material-icons files-action files-delete" data-mapperid="@map.IdMapeo">delete</i></a>
                        </div>
                    </div>
                    <div class="col pl-0 s3 center-align">
                        <h4 class="mb-0 number-tables white-text text-shadow">@map.NumeroTablas</h4>
                        <spam class="white-text text-shadow">@(@map.NumeroTablas > 1 ? "Tablas" : "Tabla")</spam>
                    </div>
                </div>
            </div>

            <div class="card-content grey lighten-5">
                <p>@map.Descripcion</p>
                <div class="display-flex justify-content-between mt-3">
                    <small class="blue-text text-darken-2">Por: @map.Usuario</small>
                    <small class="blue-text text-darken-2">@map.Fecha.ToString("dd/MMM/yyyy")</small>
                </div>
            </div>

        </div>
    </div>
}